<!DOCTYPE html>

<head>
    <title>Todo App</title>
    <link rel="stylesheet" href="/static/style.css" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
        integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>

<body>
    <div class="todo-container">
        <h2>Change To-Do</h2>
        <div>

            <ul class="todo-list">
                <li class="todo-list-item">
                    <form action="/edit/<%= todoTask._id %>" method="POST">
                        <div class="todo-list-item-name"> <input type="text" value="<%= todoTask.title %>" name="title">
                        </div>
                        <div class="todo-list-item-name"> <input type="text" value="<%= todoTask.description %>"
                                name="description"></div>
                        <div class="todo-list-item-name"> <input type="datetime-local" value="<%= todoTask.date %>"
                                name="datatime" /></div>
                        <div class="todo-list-item-name"> <select name="select">
                                <% todoCategory.forEach(category=>{%>
                                    <% if(todoTask.category==category._id) {%>
                                        <option selected value="<%=category._id%>">
                                            <%= category.title %>
                                        </option>
                                        <% } else { %>
                                            <option value="<%=category._id %>">
                                                <%= category.title %>
                                            </option>
                                            <% }}) %>
                            </select></div>
                        <a href="/categoryAdd/" class=""><span class="fas fa-plus"></span></a>
                        <button type="submit">Confirm</button>
                        <a href="/" class="cancel">Cancel</a>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</body>